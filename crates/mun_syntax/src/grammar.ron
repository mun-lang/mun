// Stores definitions which must be used in multiple places
// See `cargo gen-syntax` (defined in crates/tools/src/main.rs)
Grammar(
    single_char_tokens: [
        // Original Lua symbols
        ["+", "PLUS"],
        ["-", "MINUS"],
        ["*", "STAR"],
        ["/", "SLASH"],
        ["%", "PERCENT"],
        ["^", "CARET"],
        ["#", "HASH"],
        [".", "DOT"],
        ["<", "LT"],
        [">", "GT"],
        ["=", "EQ"],
        ["(", "L_PAREN"],
        [")", "R_PAREN"],
        ["{", "L_CURLY"],
        ["}", "R_CURLY"],
        ["[", "L_BRACKET"],
        ["]", "R_BRACKET"],
        [";", "SEMI"],
        [":", "COLON"],
        [",", "COMMA"],
        ["!", "EXCLAMATION"],

        // Extended symbols
        ["_", "UNDERSCORE"],
    ],
    // Tokens for which the longest match must be chosen (e.g. `..` is a DOTDOT, but `.` is a DOT)
    multi_char_tokens: [
        // Original Lua symbols
        ["==", "EQEQ"],
        // Not equals differs from Lua in that != is used.
        ["!=", "NEQ"], //["~= ", ""]
        ["<=", "LTEQ"],
        [">=", "GTEQ"],
        ["..", "DOTDOT"],
        ["...", "DOTDOTDOT"],

        // Extended symbols
        ["+=", "PLUSEQ"],
        ["-=", "MINUSEQ"],
        ["*=", "STAREQ"],
        ["/=", "SLASHEQ"],
        ["^=", "CARETEQ"],
        ["%=", "PERCENTEQ"],
        ["..=", "DOTDOTEQ"],
        ["::", "COLONCOLON"],
    ],
    keywords: [
        // Original Lua keywords
        "and",
        "break",
        "do",
        "else",
        // "elseif",    // Simply use else if
        // "end",       // We use braces
        "false",
        "for",
        "fn",
        "if",
        "in",
        // "local",     // We use let
        "nil",
        // "not",        // We use !
        // "or",
        "self",
        "super",
        // "repeat",    // Not supported
        "return",
        // "then",      // Not supported
        "true",
        // "until",     // Not supported
        "while",
        "loop",

        // Extended keywords
        "let",
        "mut",
        "class",
        "public",
        "protected",
        "private",
        "export",
        "never",
    ],
    literals: [
        "INT_NUMBER",
        "FLOAT_NUMBER",
        "STRING",
    ],
    tokens: [
        "ERROR",
        "IDENT",
        "WHITESPACE",
        "COMMENT",
    ],
    nodes: [
        "SOURCE_FILE",

        "FUNCTION_DEF",
        "RET_TYPE",
        "VISIBILITY",

        "PARAM_LIST",
        "PARAM",

        "PATH_TYPE",
        "NEVER_TYPE",

        "LET_STMT",
        "EXPR_STMT",

        "PATH_EXPR",
        "PREFIX_EXPR",
        "LITERAL",
        "BIN_EXPR",
        "PAREN_EXPR",
        "CALL_EXPR",
        "IF_EXPR",
        "BLOCK_EXPR",
        "RETURN_EXPR",
        "LOOP_EXPR",
        "CONDITION",

        "BIND_PAT",
        "PLACEHOLDER_PAT",

        "ARG_LIST",

        "NAME",
        "NAME_REF",

        "PATH",
        "PATH_SEGMENT",
    ],
    ast: {
        "SourceFile": (
            traits: [ "ModuleItemOwner", "FunctionDefOwner" ],
        ),
        "ModuleItem": (
            enum: ["FunctionDef"]
        ),
        "Visibility": (),
        "FunctionDef": (
            traits: [
                "NameOwner",
                "VisibilityOwner",
                "DocCommentsOwner",
            ],
            options: [ "ParamList", ["body", "BlockExpr"], "RetType" ],
        ),
        "RetType": (options: ["TypeRef"]),
        "ParamList": (
            collections: [
                ["params", "Param"]
            ]
        ),
        "Param": (
            options: [ "Pat" ],
            traits: [
                "TypeAscriptionOwner"
            ],
        ),
        "LetStmt": (
            options: [
                ["pat", "Pat"],
                ["initializer", "Expr"],
            ],
            traits: [
                "TypeAscriptionOwner",
            ]
        ),
        "Condition": (
            options: [ "Pat", "Expr" ]
        ),

        "ExprStmt": (
            options: [ ["expr", "Expr"] ]
        ),
        "Stmt": (
            enum: ["LetStmt", "ExprStmt"]
        ),

        "LoopExpr": (
            traits: ["LoopBodyOwner"]
        ),

        "PathExpr": (options: ["Path"]),
        "PrefixExpr": (options: ["Expr"]),
        "BinExpr": (),
        "Literal": (),
        "ParenExpr": (options: ["Expr"]),
        "CallExpr": (
            traits: ["ArgListOwner"],
            options: [ "Expr" ],
        ),
        "IfExpr": (
            options: [ "Condition" ]
        ),
        "ArgList": (
            collections: [
                ["args", "Expr"]
            ]
        ),

        "Expr": (
            enum: [
                "Literal",
                "PrefixExpr",
                "PathExpr",
                "BinExpr",
                "ParenExpr",
                "CallExpr",
                "IfExpr",
                "LoopExpr",
                "ReturnExpr",
                "BlockExpr",
            ]
        ),

        "Name": (),
        "NameRef": (),
        "PathType": (options: ["Path"]),
        "NeverType": (),
        "TypeRef": (
            enum: [
                "PathType",
                "NeverType",
            ]
        ),
        "ReturnExpr": (options: ["Expr"]),
        "BlockExpr": (
            options: [ "Expr" ],
            collections: [
                ["statements", "Stmt"],
            ],
        ),
        "Path": (
            options: [
                ["segment", "PathSegment"],
                ["qualifier", "Path"],
            ]
        ),
        "PathSegment": (
            options: [ "NameRef" ]
        ),

        "BindPat": (
            options: [ "Pat" ],
            traits: ["NameOwner"]
        ),
        "PlaceholderPat": (),
        "Pat": (
            enum: [
                "BindPat",
                "PlaceholderPat"
            ],
        ),
    }
)
